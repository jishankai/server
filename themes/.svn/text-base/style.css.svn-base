@charset "utf-8";



*{margin: 0;padding: 0;}
ul li{list-style: none;}
a{text-decoration: none;}
img{border: none;}
em i{font-style: normal;}
.clearfix:after{content: "\200B";height: 0;visibility: hidden;display: block;clear: both;}
.vm{vertical-align: middle;}

body{background: #fff;font-family: "Tahoma";position: relative;padding-bottom: 90px;}

.light{position: absolute;z-index:1;width: 100%;height:80%;top: 0;left: 0;}
.light img{width: 100%;height: 100%;}

.banner{width: 1263px;position: relative;margin: 0 auto;}
.banner img{width: 100%;display: block;*zoom:1;}
.appicon{display: inline-block;width: 220px;height: 289px;background: url(img/icon.png) no-repeat 0 0;position: absolute;right: 10%;bottom: 90px;}
.wrapper{width: 1000px;margin: 0 auto;position: relative;z-index: 2;}


/*导航*/
.nav{width:750px;padding: 1px; margin-top: -200px;*margin-top:-100px;position: relative;display: inline-block;vertical-align: middle;*display: inline;*zoom:1;}
.nav a{color: #fff;margin-left: 100px;}
.nav a i{display: inline-block;vertical-align: middle;margin-right: 10px;*display: inline;*zoom:1;}
.nav a .email{width: 30px;height: 23px;background: url(img/mail.png) no-repeat 0 0;}
.nav a .tx{display: inline-block;width: 78px;height: 21px;background: url(img/font_contact.png) no-repeat 0 0; vertical-align: middle;text-shadow:1px 1px 2px #3f93d1;}
.nav a .addr{color: #3677b4;text-decoration: underline;}

/*APP Store按钮*/
.app{width: 210px;height: 98px;background: url(img/btn_app.png) no-repeat 0 0;position: relative; margin-top: -155px; display: inline-block;vertical-align: middle;float: right;*display: inline;*zoom:1;}

/*图片滚动*/
.scroll{width: 100%;margin-top: -40px;position: relative;height: 470px;}
.box{width: 801px;height: 481px;background: url(img/box.png) no-repeat 0 0;padding: 0 7px; margin: 0 auto;position: relative;}

.prev,.next{position: absolute;width: 89px;height: 98px;top: 205px;cursor: pointer;}
.prev{background: url(img/left.png) no-repeat 0 0;left: -12px;}
.next{background: url(img/right.png) no-repeat 0 0;right: -12px;}
.outline{width: 789px;overflow: hidden;height: 470px;position: absolute;margin-left: 7px;margin-top: 5px;}
.slide{position: absolute;}
.slide li{float: left;margin: 7px 6px 7px 0;}

/*简介*/
.topic{background: url(img/topic.png) no-repeat 0 0;width: 310px;height: 57px;margin: 27px auto 10px;text-align: center;}

.border_top{width: 1000px;height: 35px;background: url(img/border_top.png) no-repeat 0 0;}
.border_bottom{width: 1000px;height: 35px;background: url(img/border_bottom.png) no-repeat 0 0;}
.content{background: url(img/border_mid.png) repeat-y 0 0;text-align: center; padding: 0 15px;width: 970px;color:#fff;font-family: "华文细黑";background-size: 100% 100%;}

.footer{width:100%;text-align: center;color: #b3d0e5;padding: 17px 0;margin-top: 60px;background:#3673ab;
}

.content .addr{color: #22b6b2;text-decoration: underline;}